@page
@model NF_Portal.Pages.Programm.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Programm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Programm.Bezeichnung)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Programm.Bezeichnung)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Programm.Von)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Programm.Von)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Programm.Bis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Programm.Bis)
        </dd>
    </dl>
    <h5>Veranstaltungen</h5>
    @{
        var param = new Dictionary<string, string> { { "programm", Model.Programm.Id.ToString() } };

    }
    <p>
        <a asp-page="../Veranstaltung/Create" asp-all-route-data="param">Create New</a>
    </p>
    @if (Model.Programm.Veranstaltungen != null)
    {
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Programm.Veranstaltungen.ToList()[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Programm.Veranstaltungen.ToList()[0].Termin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Programm.Veranstaltungen.ToList()[0].Auskunftsperson)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Programm.Veranstaltungen)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Termin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Auskunftsperson)
                    </td>
                    <td>
                        <a asp-page="../Veranstaltung/Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="../Veranstaltung(Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="../Veranstaltung/Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Programm?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
